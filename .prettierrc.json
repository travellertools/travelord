{
    "parser": "typescript",
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "overrides": [
        {
            "files": "*.json",
            "options": { "parser": "json" }
        },
        {
            "files": "*.{ts,tsx}",
            "options": { "parser": "typescript" }
        },
        {
            "files": "*.md",
            "options": { "parser": "markdown" }
        }
    ]
}
